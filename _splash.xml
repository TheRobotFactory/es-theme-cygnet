<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
  <variables>
    <baseColor>00008b</baseColor>
    <gradientEndColor>20206b</gradientEndColor>
    <backgroundColor>252525</backgroundColor>
    <centerFadeColor>00008b50</centerFadeColor>
  </variables>
  <subset name="colorset" displayName="${subset.colorset}">
		<include name="cygnet" displayName="${colorsetcygnetname}">./_res/colorsets/cygnet.xml</include>
		<include name="mono" displayName="${colorsetmononame}">./_res/colorsets/mono.xml</include>
		<include name="term" displayName="${colorsettermname}">./_res/colorsets/terminal.xml</include>
  </subset>
  <view name="splash">
    <splash name="splash">
      <backgroundColor>000000FF</backgroundColor>
    </splash>
    <image name="progressbar">
      <origin>0 0</origin>
      <pos>0.25 0.87</pos>
      <size>0.5 0.036</size>
      <color>6060607F</color>
      <colorEnd>6060607F</colorEnd>
      <roundCorners>0.01</roundCorners>
    </image>
    <image name="progressbar:active">
      <tile>true</tile>
      <path>./_res/images/progress.png</path>
      <color>${baseColor}</color>
      <colorEnd>${gradientEndColor}</colorEnd>
    </image>
    <image name="background">
      <pos>0.5 0.5</pos>
      <origin>0.5 0.5</origin>
      <minSize>1 1</minSize>
      <path>:/logo.png</path>
    </image>
    <text name="label">
      <color>FFFFFFFF</color>
      <glowColor>00000018</glowColor>
      <glowSize>3</glowSize>
      <glowOffset>1</glowOffset>
    </text>
  </view>
</theme>
