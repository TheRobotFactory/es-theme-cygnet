<?xml version="1.0" encoding="UTF-8"?>
<theme>
    <formatVersion>7</formatVersion>
	<variables>
		<colorsetname>Colorset</colorsetname>
		<colorsetcygnetname>Cygnet</colorsetcygnetname>
		<colorsettermname>Terminal</colorsettermname>
		<colorsetmononame>Mono</colorsetmononame>
		<templatename>Template</templatename>
		<templatecygnettname>Cygnet</templatecygnettname>
		<templatenometatname>No-meta</templatenometatname>
		<templatsimplearttename>Simpleart</templatsimplearttename>
		<templatesanometatname>Simpleart No-meta</templatesanometatname>
	</variables>
	<subset name="colorset" displayName="${subset.colorset}">
		<include name="cygnet" displayName="${colorsetcygnetname}">./_res/colorsets/cygnet.xml</include>
		<include name="mono" displayName="${colorsetmononame}">./_res/colorsets/mono.xml</include>
		<include name="term" displayName="${colorsettermname}">./_res/colorsets/terminal.xml</include>
	</subset>
 

<!-- System View -->
	<view name="system">

	<!-- Page Layout -->
        <image name="system-background" extra="true">
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <tile>true</tile>
        </image>

        <image name="bottom" extra="true">
            <path>./_res/images/white.png</path>
            <origin>0 1</origin>
            <pos>0 1</pos>
            <size>1 0.0655</size>
        </image>

		<image name="bottom-highlight" extra="true">
			<path>./_res/images/white.png</path>
			<origin>0 0</origin>
			<pos>0 0.9345</pos>
			<size>1 0.005</size>
		</image>

        <helpsystem name="help">
            <fontPath>./_res/fonts/RobotoCondensed-Regular.ttf</fontPath>
            <fontSize>0.035</fontSize>
		</helpsystem>

	<!-- System Specific Images -->
        <image name="mascot" extra="true">
            <origin>0 1</origin>
            <pos>0 0.9345</pos>
            <maxSize>0.75 0.75</maxSize>
        </image>
        <image name="system" extra="true">
            <origin>1 0</origin>
            <pos>0.94 0.08</pos>
            <maxSize>0.43 0.60</maxSize>
        </image>
	</view>

    <!-- Game View - All -->
    <view name="basic, detailed, video, grid">

        <image name="background">
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <tile>true</tile>
        </image>
        <image name="top" extra="true">
            <path>./_res/images/white.png</path>
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 0.16</size>
        </image>
        <image name="top-highlight" extra="true">
            <path>./_res/images/white.png</path>
            <origin>0 1</origin>
            <pos>0 0.161</pos>
            <size>1 0.004</size>
        </image>
        <image name="bottom-highlight" extra="true">
            <path>./_res/images/white.png</path>
            <origin>0 0</origin>
            <pos>0 0.9345</pos>
            <size>1 0.005</size>
        </image>
        <image name="bottom" extra="true">
            <path>./_res/images/white.png</path>
            <origin>0 1</origin>
            <pos>0 1</pos>
            <size>1 0.0655</size>
        </image>


    <!-- System Specific Images -->
		<image name="logo">
			<!-- Left Aligned at Top -->
			<origin>0 0.5</origin>
			<pos>0.03 0.0775</pos>
			<maxSize>0.55 0.10</maxSize>
		</image>

    </view>

	<view name="detailed, video">
		<image name="system" extra="true">
			<!-- Right Aligned at Top -->
			<origin>1 0</origin>
			<pos>0.98 0.02</pos>
			<maxSize>0.2 0.25</maxSize>
		</image>
	</view>

	<subset name="template" displayName="${templatename}">
		<include name="cygnett" displayName="${templatecygnettname}">./_res/templates/cygnet.xml</include>
		<include name="nometat" displayName="${templatenometatname}">./_res/templates/nometa.xml</include>
		<include name="simpleartt" displayName="${templatsimplearttename}">./_res/templates/simpleart.xml</include>
		<include name="sanometat" displayName="${templatesanometatname}">./_res/templates/simpleart-nometa.xml</include>
	</subset>

	<view name="system">
	<!-- System Specific Images -->
		<image name="logo">
			<path>./logos/${system.theme}.svg</path>
        </image>

        <image name="mascot" extra="true">
			<path>./mascots/${system.theme}.png</path>
		</image>

        <image name="system" extra="true">
			<path>./systems/${system.theme}.png</path>
		</image>
	</view>

    <view name="detailed, video">
		<image name="logo">
			<path>./logos/${system.theme}.svg</path>
		</image>
        <image name="system" extra="true">
			<path>./systems/${system.theme}.png</path>
		</image>
	</view>
    <view name="basic">
	<!-- System Specific Images -->
		<image name="logo">
			<path>./logos/${system.theme}.svg</path>
		</image>
		<image name="overlay" extra="true">
			<path>./controllers/${system.theme}.svg</path>
		</image>
	</view>

    <!-- Custom Carousel System View -->

    <feature supported="carousel">

		<view name="system">

			<carousel name="systemcarousel">
				<pos>0 0.60</pos>
				<size>1 0.30</size>
				<color>00000000</color>
				<logoScale>1.85</logoScale>
				<logoSize>0.30 0.15</logoSize>
				<maxLogoCount>1</maxLogoCount>
			</carousel>

			<text name="systemInfo">
                <fontPath>./_res/fonts/RobotoCondensed-Regular.ttf</fontPath>
                <alignment>right</alignment>
				<pos>0.010 0.880</pos>
				<size>0.980 0.050</size>
				<fontSize>0.035</fontSize>
			</text>

		</view>

	</feature> 

</theme>
